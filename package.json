{
  "name": "wled-buildlight-action",
  "version": "1.0.0",
  "description": "WLED Buildlight Action",
  "main": "index.js",
  "scripts": {
    "build": "pnpm /^build:.*/",
    "build:es6": "swc src -C module.type=es6 -d build/es6",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf build coverage",
    "commit": "git-cz",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "eslint": "eslint --format=pretty src/**/*.ts",
    "eslint:fix": "eslint --fix --format=pretty src/**/*.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint:staged": "lint-staged",
    "package": "ncc build --source-map --license licenses.txt",
    "setup": "pnpm add -g commitizen david git-cz npmvet typesync",
    "semantic-release": "semantic-release",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "test:coverage": "jest --coverage",
    "verify": "pnpm /^verify:.*/",
    "verify:david": "david",
    "verify:format": "prettier --check '**/*.ts'",
    "verify:npmvet": "npmvet --strict",
    "verify:eslint": "pnpm eslint",
    "verify:jest": "jest",
    "verify:tsc": "pnpm type-check",
    "verify:tscheck": "typesync"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jameswlane/wled-buildlight-action.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jameswlane/wled-buildlight-action/issues"
  },
  "homepage": "https://github.com/jameswlane/wled-buildlight-action#readme",
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "axios": "1.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@jest/globals": "29.4.3",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.37",
    "@types/chance": "1.1.3",
    "@types/eslint": "8.21.1",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/jest": "29.4.0",
    "@types/js-yaml": "4.0.5",
    "@types/marked": "4.0.8",
    "@types/node": "18.14.2",
    "@types/prettier": "2.7.2",
    "@types/semantic-release": "20.0.1",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "@vercel/ncc": "0.36.1",
    "all-contributors-cli": "6.24.0",
    "chance": "1.1.11",
    "commitizen": "4.3.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.35.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-formatter-pretty": "4.1.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jest-dom": "4.0.3",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "15.6.1",
    "eslint-plugin-no-use-extend-native": "0.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unicorn": "45.0.2",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "js-yaml": "4.1.0",
    "lint-staged": "13.1.2",
    "marked": "4.2.12",
    "prettier": "2.8.4",
    "rimraf": "4.1.3",
    "semantic-release": "20.1.1",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  }
}
